<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_profile_change_stdnt"
    tools:context="ra1vi2.asdc.kietian.Profile_change_stdnt">

    <TextView
        android:layout_width="117dp"
        android:layout_height="34dp"
        android:text="Roll No"
        android:id="@+id/roll_no_id"
        android:layout_x="102dp"
        android:layout_y="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/profile_sec"
        android:layout_alignStart="@+id/profile_sec" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_sem"
        android:text="Semester"
        android:layout_x="137dp"
        android:layout_y="49dp"
        android:layout_alignBottom="@+id/roll_no_id"
        android:layout_alignLeft="@+id/roll_no_id"
        android:layout_alignStart="@+id/roll_no_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_sec"
        android:text="Section"
        android:layout_x="158dp"
        android:layout_y="92dp"
        android:layout_below="@+id/profile_sem"
        android:layout_toLeftOf="@+id/etchngpass"
        android:layout_toStartOf="@+id/etchngpass" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/roll_no_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etchngpass"
        android:layout_marginTop="54dp"
        android:visibility="invisible"
        android:layout_below="@+id/profile_sec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="176dp"
        android:layout_y="196dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etchngpasscnfrm"
        android:visibility="invisible"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_x="164dp"
        android:layout_y="137dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New Password"
        android:visibility="invisible"
        android:id="@+id/textView2"
        android:layout_x="73dp"
        android:layout_y="162dp"
        android:layout_alignBottom="@+id/etchngpass"
        android:layout_toLeftOf="@+id/etchngpass"
        android:layout_toStartOf="@+id/etchngpass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Password"
        android:id="@+id/textView4"
        android:layout_x="71dp"
        android:layout_y="128dp"
        android:layout_alignRight="@+id/chngpassbutton"
        android:layout_alignEnd="@+id/chngpassbutton"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:visibility="invisible"
        android:id="@+id/chngpassbutton"
        android:layout_x="182dp"
        android:layout_y="270dp"
        android:layout_below="@+id/etchngpasscnfrm"
        android:layout_alignRight="@+id/etchngpasscnfrm"
        android:layout_alignEnd="@+id/etchngpasscnfrm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="16dp"
        android:text="Confirm Password"
        android:visibility="invisible"
        android:id="@+id/textView3"
        android:layout_x="34dp"
        android:layout_y="218dp"
        android:layout_alignBottom="@+id/etchngpasscnfrm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Roll No"
        android:id="@+id/textView11"
        android:layout_x="-10dp"
        android:layout_y="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Sem"
        android:id="@+id/textView12"
        android:layout_above="@+id/profile_sec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Section"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/profile_sec"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
